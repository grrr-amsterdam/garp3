{
    "name": "grrr-amsterdam/garp3",
    "description": "Framework and CMS built on top of Zend Framework.",
    "type": "library",
    "require": {
        "google/apiclient": "^1.1",
        "phpoffice/phpexcel": "1.8.*",
        "zendframework/zendframework1": "^1",
        "sentry/sentry": "^1.1",
        "monolog/monolog": "^1.0",
        "dompdf/dompdf": "^0.7.0",
        "fzaninotto/faker": "^1.6",
        "tedivm/jshrink": "1.1.0",
        "vlucas/phpdotenv": "2.0.x-dev"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.6",
        "phpunit/phpunit": "3.7.*"
    },
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "autoload": {
        "psr-0": {
            "Garp_": "library/",
            "HTMLPurifier": "htmlpurifier/library/"
        },
       "files": ["htmlpurifier/library/HTMLPurifier.composer.php"]
    },
    "include-path": [
    	"library/"
    ],
    "scripts": {
    	"test": "phpunit --verbose --colors --bootstrap tests/TestHelper.php tests/",
        "phpcs": "vendor/bin/phpcs --standard=./phpcs.xml --extensions=php --colors ."
    },
    "bin": ["scripts/g"]
}
